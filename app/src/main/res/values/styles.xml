<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">@dimen/y48px</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="EditTextView">
        <item name="android:textSize">@dimen/TextNormalSize</item>
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">@dimen/y84px</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textSize">@dimen/TextNormalSize</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NormalBlackText">
        <item name="android:textSize">@dimen/TextNormalSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CheckBoxAgreement">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/TextNormalSize</item>
    </style>

    <style name="PropmtTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/TextNormalSize</item>
    </style>

    <style name="BtmMenuText">
        <item name="android:textSize">@dimen/y24px</item>
        <item name="android:textColor">@color/btmMenuUnColor</item>
    </style>

    <style name="SideMenuText">
        <item name="android:textSize">@dimen/y29px</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="MainPageItemTitle">
        <item name="android:textSize">@dimen/y28px</item>
        <item name="android:textColor">#EF4399</item>
    </style>

    <style name="MainPageItemText">
        <item name="android:textSize">@dimen/y32px</item>
        <item name="android:textColor">@color/colorBlackText</item>
    </style>

    <style name="BabyKnowledgeItemText">
        <item name="android:textSize">@dimen/y28px</item>
        <item name="android:textColor">#EF4399</item>
    </style>

    <style name="MoreItemText">
        <item name="android:textSize">@dimen/y30px</item>
        <item name="android:textColor">@color/colorBlackText</item>
    </style>

    <style name="AboutText">
        <item name="android:textSize">@dimen/y28px</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>
