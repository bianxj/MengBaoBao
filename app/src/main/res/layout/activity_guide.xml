<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_white">

    <com.doumengmeng.customer.view.AutoScrollViewPager
        android:id="@+id/asvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dot_src="@drawable/icon_dot"
        app:dot_gap="@dimen/x20px"
        app:dot_size="@dimen/x16px"
        app:dot_margin_bottom="@dimen/y100px"
        app:canLoop="false"
        app:dot_visible="true"
        app:fitxy="true"
        >

    </com.doumengmeng.customer.view.AutoScrollViewPager>

    <RelativeLayout
        android:id="@+id/ll_guide_botttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        >

        <Button
            android:id="@+id/bt_guide_login"
            android:layout_width="@dimen/x120px"
            android:layout_height="@dimen/x60px"
            android:background="@drawable/btn_login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x200px"
            android:layout_marginBottom="@dimen/y30px"
            />

        <Button
            android:id="@+id/bt_guide_register"
            android:layout_width="@dimen/x120px"
            android:layout_height="@dimen/x60px"
            android:background="@drawable/btn_register"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x200px"
            android:layout_marginBottom="@dimen/y30px"/>
    </RelativeLayout>
</RelativeLayout>