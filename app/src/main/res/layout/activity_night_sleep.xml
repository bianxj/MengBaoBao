<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:focusableInTouchMode="true"
    android:focusable="true"
    >

    <include layout="@layout/include_title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondBlack.Text28px"
                android:text="@string/night_sleep_time"
                android:layout_marginTop="@dimen/y50px"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y27px">

                        <EditText
                            android:id="@+id/et_input_data_two"
                            android:layout_width="@dimen/x233px"
                            android:layout_height="@dimen/y86px"
                            android:layout_centerInParent="true"
                            style="@style/InputDataStyle"
                            android:inputType="numberDecimal"
                            tools:ignore="LabelFor" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hour_day"
                        style="@style/FirstGray.Text26px"
                        android:layout_marginLeft="@dimen/x18px"
                        android:layout_toRightOf="@+id/et_input_data_two"
                        android:layout_centerVertical="true"
                        />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y48px" />

            <TextView
                android:id="@+id/tv_reference"
                android:layout_width="@dimen/x574px"
                android:layout_height="wrap_content"
                style="@style/SecondBlack.Text26px"
                android:layout_marginTop="@dimen/y46px"
                android:includeFontPadding="false"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>