<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightSky">

    <include layout="@layout/include_title_back"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.doumengmengandroidbady.view.BaseInfoLayout
                android:id="@+id/base_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y19px"
                ></com.doumengmengandroidbady.view.BaseInfoLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/y95px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>