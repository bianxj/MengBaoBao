<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x30px"
        android:paddingLeft="@dimen/x30px"
        android:paddingTop="@dimen/y30px"
        android:paddingBottom="@dimen/y30px"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_circle_loading">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/loading"
                android:layout_width="@dimen/x68px"
                android:layout_height="@dimen/x68px"
                android:src="@drawable/icon_loading"
                />

            <TextView
                android:id="@+id/iv_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x68px"
                style="@style/WhiteText26px"
                android:text="@string/dialog_updating"
                android:layout_marginLeft="@dimen/x10px"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>