<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include layout="@layout/include_title_back"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y227px"
        android:id="@+id/imageView" />


    <FrameLayout
        android:layout_width="@dimen/y128px"
        android:layout_height="@dimen/y128px"
        android:layout_marginTop="@dimen/y116px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        >
        <ImageView
            android:id="@+id/iv_loading_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading" />
        <TextView
            android:id="@+id/tv_loading_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/GrayText28px"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="40%"
            />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_message"
        android:layout_centerHorizontal="true"
        style="@style/NormalTextView"
        android:layout_marginTop="@dimen/y926px"/>

</RelativeLayout>