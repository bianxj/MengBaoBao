<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <include layout="@layout/include_title_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y47px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >
                        <EditText
                            android:id="@+id/et_input_data_one"
                            android:layout_width="@dimen/x233px"
                            android:layout_height="@dimen/y86px"
                            android:layout_centerInParent="true"
                            style="@style/InputDataStyle"
                            android:text="85.3"
                            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day"
                        style="@style/GrayText26px"
                        android:layout_marginLeft="@dimen/x18px"
                        android:layout_marginRight="@dimen/x18px"
                        />
                        <EditText
                            android:id="@+id/et_input_data_two"
                            android:layout_width="@dimen/x233px"
                            android:layout_height="@dimen/y86px"
                            android:layout_centerInParent="true"
                            style="@style/InputDataStyle"
                            android:text="85.3"
                            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/count"
                        style="@style/GrayText26px"
                        android:layout_marginLeft="@dimen/x18px"
                        />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y48px"
                ></View>

            <TextView
                android:layout_width="@dimen/x574px"
                android:layout_height="wrap_content"
                android:text="@string/cacation_content"
                style="@style/BlackText26px"
                android:layout_marginTop="@dimen/y28px"
                android:includeFontPadding="false"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>