<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_title_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="@dimen/x652px"
                android:layout_height="@dimen/x358px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_refund_result"
                android:layout_marginTop="@dimen/x43px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/x87px"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/x69px"
                        android:layout_height="@dimen/x69px"
                        android:src="@drawable/icon_sure"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SecondBlack.Text50px"
                        android:layout_marginLeft="@dimen/x20px"
                        android:text="@string/refund_result_success"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x20px"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FirstPink.Text48px"
                        android:includeFontPadding="false"
                        android:layout_gravity="center_vertical"
                        android:text="ï¿¥"/>
                    <TextView
                        android:id="@+id/tv_refund_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FirstPink.Text72px"
                        android:includeFontPadding="false"
                        android:text=""/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x15px"
                    style="@style/FirstGray.Text26px"
                    android:text="@string/refund_result_describe"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ThirdBlack.Text35px"
                android:layout_marginTop="@dimen/x30px"
                android:layout_marginLeft="@dimen/x45px"
                android:text="@string/refund_result_details"/>

            <LinearLayout
                android:id="@+id/ll_refund_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x50px"
                android:layout_marginRight="@dimen/x50px"
                android:layout_marginTop="@dimen/x30px"
                android:minHeight="@dimen/x310px"
                >

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/x596px"
                android:layout_height="@dimen/y85px"
                android:text="@string/sure"
                android:gravity="center"
                style="@style/FirstPink.Text32px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y70px"
                android:layout_marginBottom="@dimen/y20px"
                android:background="@drawable/bg_pay_text_pink"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x100px"
                android:text="@string/refund_result_tel"
                android:layout_gravity="center_horizontal"
                style="@style/SecondGray.Text28px"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>