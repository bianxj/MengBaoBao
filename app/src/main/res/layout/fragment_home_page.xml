<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightSky">

    <include layout="@layout/include_title_image"></include>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/RowSplitLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y476px"
        android:background="@color/white">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/ll_home_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </FrameLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/RowSplitLine" />
    <LinearLayout
        android:id="@+id/ll_observe_point"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y124px"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y19px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/y30px"
                android:layout_height="@dimen/y28px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bud"
                android:layout_marginLeft="@dimen/x40px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MainPageItemTitle"
                android:text="观察要点"
                android:layout_marginLeft="@dimen/x11px"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainPageItemText"
            android:text="宝妈，您有注意到宝宝的这些变化吗？"
            android:layout_marginLeft="@dimen/x40px"
            android:layout_marginTop="@dimen/y10px"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/RowSplitLine" />
    <LinearLayout
        android:id="@+id/ll_doctor_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y124px"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y19px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/y30px"
                android:layout_height="@dimen/y28px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bud"
                android:layout_marginLeft="@dimen/x40px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MainPageItemTitle"
                android:text="萌宝宝医生"
                android:layout_marginLeft="@dimen/x11px"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainPageItemText"
            android:text="宝妈，你可以为您的宝宝选择专属医生"
            android:layout_marginLeft="@dimen/x40px"
            android:layout_marginTop="@dimen/y10px"/>
    </LinearLayout>


</LinearLayout>