<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:layout_height="@dimen/x480px"-->
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="@dimen/x679px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x27px"
        android:layout_centerHorizontal="true"
        android:background="@color/first_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img"
                android:scaleType="fitXY"
                android:layout_width="@dimen/x679px"
                android:layout_height="@dimen/x236px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x236px"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x21px"
                    android:layout_marginLeft="@dimen/x53px"
                    android:layout_marginRight="@dimen/x62px"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SecondBlack.Text35px"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SecondGray.Text27px"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/x15px"
                        android:includeFontPadding="false"/>
                </LinearLayout>


                <View
                    android:layout_width="@dimen/x627px"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/x15px"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/lineGray"></View>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x50px"
                    android:layout_marginRight="@dimen/x26px"
                    android:layout_gravity="right"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    style="@style/NinthGray.Text23px"/>
            </LinearLayout>
        </RelativeLayout>

        <com.doumengmeng.customer.view.CircularCoverView
            android:layout_width="@dimen/x679px"
            android:layout_height="match_parent"
            app:radius="@dimen/x10px"
            app:cover_color="@color/lightSky"
            />
    </FrameLayout>
    </RelativeLayout>


</RelativeLayout>