<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightSky">

    <include layout="@layout/include_title_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y162px"
                android:layout_marginTop="@dimen/y18px"
                android:background="@color/white"
                android:visibility="visible">

                <com.doumengmengandroidbady.view.CircleImageView
                    android:id="@+id/civ_doctor"
                    android:layout_width="@dimen/y94px"
                    android:layout_height="@dimen/y94px"
                    android:layout_marginLeft="@dimen/x48px"
                    android:layout_marginTop="@dimen/y28px"
                    android:src="@drawable/default_icon_doctor"
                    app:civ_border_color="@color/doctorFrame"
                    app:civ_border_width="@dimen/x2px" />

                <TextView
                    android:id="@+id/tv_doctor_name"
                    style="@style/BlackText30px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x166px"
                    android:layout_marginTop="@dimen/y34px"
                    android:includeFontPadding="false"
                    android:text="马骏" />

                <TextView
                    android:id="@+id/tv_doctor_hospital"
                    style="@style/LightGrayText23px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x166px"
                    android:layout_marginTop="@dimen/y88px"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:minWidth="@dimen/x320px"
                    android:text="上海儿童医学中心（上海交通…" />

                <TextView
                    android:id="@+id/tv_doctor_position"
                    style="@style/LinkPinkText23px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x558px"
                    android:layout_marginTop="@dimen/y43px"
                    android:includeFontPadding="false"
                    android:text="副主任医师" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y18px"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/baby_name" />

                    <TextView
                        android:id="@+id/tv_baby_name"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/baby_gender" />

                    <TextView
                        android:id="@+id/tv_baby_gender"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/baby_birthday" />

                    <TextView
                        android:id="@+id/tv_baby_birthday"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/realy_age" />

                    <TextView
                        android:id="@+id/tv_realy_age"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/correct_age" />

                    <TextView
                        android:id="@+id/tv_correct_age"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/height" />

                    <TextView
                        android:id="@+id/tv_height"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/weight" />

                    <TextView
                        android:id="@+id/tv_weight"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x672px"
                    android:layout_height="@dimen/y96px">

                    <TextView
                        style="@style/BlackText28px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/BMI" />

                    <TextView
                        android:id="@+id/tv_BMI"
                        style="@style/GrayText26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x53px"
                        android:text="妮妮" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linePink"></View>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96px"
                android:layout_marginTop="@dimen/y19px"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/BlackText28px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/y30px"
                    android:text="来源：WHO儿童成长标准，世界卫生组织" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x716px">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x716px">

                        <ImageView
                            android:id="@+id/iv_details"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x716px"
                            android:src="@drawable/bg_boy_weight_data" />

                        <com.doumengmengandroidbady.view.DiagramView
                            android:id="@+id/diagram_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:origin_x="@dimen/x41px"
                            app:origin_y="@dimen/x53px" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80px"
                    android:background="@color/bgWeightColor">

                    <Button
                        android:id="@+id/bt_details"
                        android:layout_width="@dimen/x151px"
                        android:layout_height="@dimen/x50px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y12px"
                        android:background="@drawable/btn_details" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y134px"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rg_weight"
                        android:layout_width="@dimen/x152px"
                        android:layout_height="@dimen/x113px"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x49px"
                        android:background="@drawable/btn_weight"
                        android:button="@null"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rg_height"
                        android:layout_width="@dimen/x152px"
                        android:layout_height="@dimen/x113px"
                        android:layout_centerInParent="true"
                        android:background="@drawable/btn_height"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rg_BMI"
                        android:layout_width="@dimen/x152px"
                        android:layout_height="@dimen/x113px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/x49px"
                        android:background="@drawable/btn_bmi"
                        android:button="@null" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_developmental_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y20px"
                android:paddingLeft="@dimen/x24px"
                android:paddingRight="@dimen/x24px"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_developmental_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96px"
                    android:gravity="center_vertical"
                    android:text="发育行为（28个月）"
                    style="@style/BlackText28px">

                </TextView>
                <LinearLayout
                    android:id="@+id/ll_developmental_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_assessment_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20px"
                android:paddingLeft="@dimen/x24px"
                android:paddingRight="@dimen/x24px"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评估结果："
                    android:layout_marginTop="@dimen/y34px"
                    style="@style/BlackText28px"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x52px"
                    android:layout_marginTop="@dimen/y34px"
                    android:layout_marginBottom="@dimen/y28px"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体重："
                            style="@style/GrayText26px"
                            />
                        <TextView
                            android:id="@+id/tv_weight_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常范围内。"
                            style="@style/GrayText26px"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身长："
                            style="@style/GrayText26px"
                            />
                        <TextView
                            android:id="@+id/tv_height_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常范围内。"
                            style="@style/GrayText26px"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身长体重比："
                            style="@style/GrayText26px"
                            />
                        <TextView
                            android:id="@+id/tv_bmi_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            style="@style/GrayText26px"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="神经心理、发育行为评估："
                            style="@style/GrayText26px"
                            />
                        <TextView
                            android:id="@+id/tv_other_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            style="@style/GrayText26px"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_report_interpretation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20px"
                android:paddingLeft="@dimen/x24px"
                android:paddingRight="@dimen/x24px"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报告解读："
                    android:layout_marginTop="@dimen/y34px"
                    style="@style/BlackText28px"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x72px"
                    android:layout_marginBottom="@dimen/y32px"
                    android:layout_marginTop="@dimen/x10px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一、体格生长评价："
                        style="@style/GrayText26px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.生长趋势（从出生位置水平到现在）"
                        style="@style/GrayText26px"/>
                    <TextView
                        android:id="@+id/tv_report_content_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孩子比较瘦小，体重在P3-10之间，身高情况良好。"
                        style="@style/FourthGrayText26px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.生长水平（本次测量的水平）"
                        style="@style/GrayText26px"/>
                    <TextView
                        android:id="@+id/tv_report_content_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孩子比较瘦小，体重在P3-10之间，身高情况良好。"
                        style="@style/FourthGrayText26px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2px"
                    android:background="@color/linkLightPink"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x72px"
                    android:layout_marginBottom="@dimen/y32px"
                    android:layout_marginTop="@dimen/y32px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二、发育评价："
                        style="@style/GrayText26px"/>
                    <TextView
                        android:id="@+id/tv_report_content_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孩子比较瘦小，体重在P3-10之间，身高情况良好。"
                        style="@style/FourthGrayText26px"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2px"
                    android:background="@color/linkLightPink"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x72px"
                    android:layout_marginBottom="@dimen/y32px"
                    android:layout_marginTop="@dimen/y32px"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三、医生的指导建议（包含对家长留言回复）"
                        style="@style/GrayText26px"/>
                    <TextView
                        android:id="@+id/tv_report_content_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孩子比较瘦小，体重在P3-10之间，身高情况良好。"
                        style="@style/FourthGrayText26px"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_prompt_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y153px">
                <TextView
                    android:id="@+id/tv_prompt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/x480px"
                    android:lineSpacingExtra="@dimen/y10px"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_parenting_guide"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y153px">
                <ImageView
                    android:id="@+id/iv_parenting_guide"
                    android:layout_width="@dimen/x408px"
                    android:layout_height="@dimen/x107px"
                    android:background="@drawable/btn_parenting_guide"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>