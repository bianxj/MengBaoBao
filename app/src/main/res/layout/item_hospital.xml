<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y163px"
    android:background="@color/lightSky"
    >

    <RelativeLayout
        android:layout_width="@dimen/x720px"
        android:layout_height="@dimen/y163px"
        android:layout_marginTop="@dimen/y19px"
        android:background="@color/first_white"
        >

        <com.doumengmeng.customer.view.CircleImageView
            android:id="@+id/civ_hospital"
            android:layout_width="@dimen/y95px"
            android:layout_height="@dimen/y95px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_width="@dimen/y1px"
            app:civ_border_color="@color/doctorFrame" />
        <LinearLayout
            android:layout_width="@dimen/x509px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x162px"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.doumengmeng.customer.view.HorizontalScrollTextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/second_black"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/y30px"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y1px"
                android:background="@color/translucenceLinkPink"
                android:layout_marginTop="@dimen/y12px" />

            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y11px"
                android:text=""
                android:textSize="@dimen/y23px"
                android:textColor="#808080"
                android:includeFontPadding="false"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_click"
    android:layout_width="@dimen/x720px"
    android:layout_height="@dimen/y163px"
    android:layout_marginTop="@dimen/y19px"></View>

</FrameLayout>