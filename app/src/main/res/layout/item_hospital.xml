<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y163px"
    android:background="@color/lightSky"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y19px"
        android:background="@color/white"
        >

        <com.doumengmengandroidbady.view.CircleImageView
            android:id="@+id/civ_hospital"
            android:layout_width="@dimen/y95px"
            android:layout_height="@dimen/y95px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:layout_width="@dimen/x509px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x162px"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="上海市儿童医院"
                    android:textColor="@color/colorBlackText"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/y30px" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y1px"
                android:background="@color/linkPink"
                android:layout_marginTop="@dimen/y12px"
                ></View>

            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y11px"
                android:text="泸定路院区：上海市泸定路355号，北..."
                android:textSize="@dimen/y23px"
                android:textColor="#808080"
                android:includeFontPadding="false"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>