<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SelfActionBarHeight"
        android:background="@color/first_white">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/first_pink"
            style="@style/FirstPink.Text26px"
            android:text="test"/>

        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="@dimen/x100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/x26px"
                android:layout_height="@dimen/x26px"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_pay_close"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>