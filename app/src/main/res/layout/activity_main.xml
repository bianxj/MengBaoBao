<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom">
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156px"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:id="@+id/rl_home_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_home_page"
                    android:layout_width="@dimen/y80px"
                    android:layout_height="@dimen/y80px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_home_check"
                    android:layout_marginTop="@dimen/y20px"
                    />
                <TextView
                    android:id="@+id/tv_home_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_page"
                    style="@style/BtmMenuText"
                    android:layout_marginTop="@dimen/BtmMenuTextMarginTop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_baby_knowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_baby_knowledge"
                    android:layout_width="@dimen/y80px"
                    android:layout_height="@dimen/y80px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_baby_knowledge_uncheck"
                    android:layout_marginTop="@dimen/y20px"
                    />
                <TextView
                    android:id="@+id/tv_baby_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/baby_knowledge"
                    style="@style/BtmMenuText"
                    android:layout_marginTop="@dimen/BtmMenuTextMarginTop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_spacialist_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_spacialist_service"
                    android:layout_width="@dimen/y80px"
                    android:layout_height="@dimen/y80px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_spacialist_service_uncheck"
                    android:layout_marginTop="@dimen/y20px"
                    />
                <TextView
                    android:id="@+id/tv_spacialist_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spacialist_service"
                    style="@style/BtmMenuText"
                    android:layout_marginTop="@dimen/BtmMenuTextMarginTop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_hospital_report"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_hospital_report"
                    android:layout_width="@dimen/y80px"
                    android:layout_height="@dimen/y80px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_hospital_report_uncheck"
                    android:layout_marginTop="@dimen/y20px"
                    />
                <TextView
                    android:id="@+id/tv_hospital_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report"
                    style="@style/BtmMenuText"
                    android:layout_marginTop="@dimen/BtmMenuTextMarginTop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_meng_lesson"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_meng_lesson"
                    android:layout_width="@dimen/y80px"
                    android:layout_height="@dimen/y80px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_lessen_uncheck"
                    android:layout_marginTop="@dimen/y20px"
                    />
                <TextView
                    android:id="@+id/tv_meng_lesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meng_lesson"
                    style="@style/BtmMenuText"
                    android:layout_marginTop="@dimen/BtmMenuTextMarginTop"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_left_side"
        android:layout_width="@dimen/x642px"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/SideMenuLineHeight">
            <com.doumengmengandroidbady.view.CircleImageView
                android:layout_width="@dimen/y67px"
                android:layout_height="@dimen/y67px"
                android:layout_marginLeft="@dimen/x24px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x118px"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_baby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BlackText30px"
                    android:text="测试"/>
                <TextView
                    android:id="@+id/tv_baby_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_male"
                    android:drawablePadding="@dimen/x5px"
                    android:layout_marginTop="@dimen/y5px"
                    style="@style/GrayText24px"
                    android:gravity="center_vertical"
                    android:text="28月22天"
                    />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1px"
            android:background="@color/lineGray"
            ></View>

        <ListView
            android:id="@+id/lv_side_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            ></ListView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
