<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <include layout="@layout/include_title_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >

                        <EditText
                            android:id="@+id/et_input_data"
                            android:layout_width="@dimen/x233px"
                            android:layout_height="@dimen/y86px"
                            android:layout_centerInParent="true"
                            style="@style/InputDataStyle"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hour_day"
                        style="@style/GrayText26px"
                        android:layout_marginLeft="@dimen/x18px"
                        />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brest_reference_value"
                style="@style/LinkPinkText23px"
                android:layout_marginTop="@dimen/y32px"
                android:includeFontPadding="false"
                />

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y24px"
                ></View>

            <RelativeLayout
                android:layout_width="@dimen/x558px"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y28px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/brest_fedding_count"
                    style="@style/GrayText26px"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >

                        <EditText
                            android:id="@+id/et_input_data_two"
                            android:layout_width="@dimen/x182px"
                            android:layout_height="@dimen/y57px"
                            android:layout_centerInParent="true"
                            style="@style/InputDataStyle"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hour_day"
                        style="@style/GrayText26px"
                        android:layout_marginLeft="@dimen/x18px"
                        />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y24px"
                ></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brest_fedding_title"
                style="@style/BlackText34px"
                android:layout_marginTop="@dimen/y43px"
                android:includeFontPadding="false"
                />

            <TextView
                android:layout_width="@dimen/x574px"
                android:layout_height="wrap_content"
                android:text="@string/brest_fedding_content"
                style="@style/BlackText26px"
                android:layout_marginTop="@dimen/y46px"
                android:includeFontPadding="false"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>