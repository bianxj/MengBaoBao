<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include layout="@layout/include_title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50px">
                <LinearLayout
                    android:id="@+id/ll_input_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    >

                        <EditText
                            android:id="@+id/et_input_data"
                            android:labelFor="@+id/et_input_data"
                            android:layout_width="@dimen/x233px"
                            android:layout_height="@dimen/y86px"
                            style="@style/InputDataStyle"
                            android:inputType="number"
                            android:maxLength="4"
                            android:imeOptions="actionNext"
                            tools:ignore="LabelFor" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ml_chinese"
                    style="@style/FirstGray.Text26px"
                    android:layout_marginLeft="@dimen/x18px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ll_input_data"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brest_reference_value"
                style="@style/FirstPink.Text23px"
                android:layout_marginTop="@dimen/y32px"
                android:layout_marginRight="@dimen/x64px"
                android:layout_marginLeft="@dimen/x64px"
                android:includeFontPadding="false"
                />

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y24px" />

            <RelativeLayout
                android:layout_width="@dimen/x558px"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y28px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/brest_fedding_count"
                    style="@style/FirstGray.Text26px"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >

                        <EditText
                            android:id="@+id/et_input_data_two"
                            android:labelFor="@+id/et_input_data_two"
                            android:layout_width="@dimen/x182px"
                            android:layout_height="@dimen/y57px"
                            style="@style/InputDataStyle"
                            android:inputType="number"
                            android:maxLength="2"
                            android:imeOptions="actionDone"
                            tools:ignore="LabelFor" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/count_day_chinese"
                        style="@style/FirstGray.Text26px"
                        android:layout_marginLeft="@dimen/x18px"
                        />
                </LinearLayout>
            </RelativeLayout>

<!--            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y24px" />

            <TextView
                android:id="@+id/tv_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x64px"
                android:layout_marginLeft="@dimen/x64px"
                android:layout_marginTop="@dimen/y24px"
                style="@style/FirstGray.Text26px"/>-->

            <View
                android:layout_width="@dimen/x681px"
                android:layout_height="@dimen/y1px"
                android:background="@color/linePink"
                android:layout_marginTop="@dimen/y24px" />

            <TextView
                android:id="@+id/tv_input_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brest_fedding_title"
                style="@style/SecondBlack.Text34px"
                android:layout_marginTop="@dimen/y43px"
                android:includeFontPadding="false"
                />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x64px"
                android:layout_marginLeft="@dimen/x64px"
                android:layout_marginTop="@dimen/x28px"
                android:orientation="vertical">

            </LinearLayout>
            <com.doumengmeng.customer.view.MyGifPlayer
                android:id="@+id/player"
                android:layout_width="@dimen/x447px"
                android:layout_height="@dimen/y311px"
                android:layout_marginTop="@dimen/y48px"
                android:layout_marginBottom="@dimen/y48px"
                app:start_drawable="@drawable/btn_play"
                app:start_side="@dimen/x94px"
                app:need_share="false">

            </com.doumengmeng.customer.view.MyGifPlayer>
        </LinearLayout>
    </ScrollView>

</LinearLayout>