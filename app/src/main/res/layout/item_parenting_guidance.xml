<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/y36px" />
    
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y45px"
        android:layout_marginRight="@dimen/y45px"
        style="@style/FirstBlack.Text28px"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10px"
        android:layout_marginLeft="@dimen/y45px"
        android:layout_marginRight="@dimen/y45px"
        style="@style/FirstGray.Text26px"/>

</LinearLayout>