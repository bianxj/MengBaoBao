<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y95px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_month_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/FourthGrayText28px"
                android:text="1"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="@dimen/x145px"
                android:layout_height="@dimen/y49px"
                android:background="@drawable/bg_input_data_three"
                android:layout_centerInParent="true"
                >
                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="@dimen/x120px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@null"
                    style="@style/FourthGrayText28px"
                    android:inputType="numberDecimal"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="@dimen/x145px"
                android:layout_height="@dimen/y49px"
                android:background="@drawable/bg_input_data_three"
                android:layout_centerInParent="true"
                >
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="@dimen/x120px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@null"
                    style="@style/FourthGrayText28px"
                    android:inputType="numberDecimal"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1px"
        android:background="@color/lineGray"
        ></View>
</LinearLayout>