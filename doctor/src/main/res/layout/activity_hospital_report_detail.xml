<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/first_white">

    <include layout="@layout/include_title_back" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hospital_name"
                style="@style/SecondBlack.Text23px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26px"
                android:gravity="center"
                android:text="" />

            <TextView
                style="@style/SecondBlack.Text28px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y18px"
                android:gravity="center"
                android:text="@string/hospital_report_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:layout_marginTop="@dimen/y47px"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_department"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_child_code"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_gender"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_current_month"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_corrent_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_corrent_month"
                        style="@style/FirstPink.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_measure_info"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_height"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_weight"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_head"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_chest"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_BMI"
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_feeding_type"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_feeding_type"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_develop_history"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_develop_history"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_ill_history"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_disease_history"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_current_ill_history"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_current_history"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <com.doumengmeng.doctor.view.GraphModule
                android:id="@+id/graph_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y19px"
                android:layout_marginBottom="@dimen/y28px">

            </com.doumengmeng.doctor.view.GraphModule>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_who"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40px"
                    android:layout_marginTop="@dimen/y26px">

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />

                    <com.doumengmengandroidbady.view.ScaleplateView
                        android:id="@+id/sv_weight"
                        android:layout_width="@dimen/x267px"
                        android:layout_height="@dimen/x27px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/x187px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40px"
                    android:layout_marginTop="@dimen/y26px">

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />

                    <com.doumengmengandroidbady.view.ScaleplateView
                        android:id="@+id/sv_height"
                        android:layout_width="@dimen/x267px"
                        android:layout_height="@dimen/x27px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/x187px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40px"
                    android:layout_marginTop="@dimen/y26px">

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />

                    <com.doumengmengandroidbady.view.ScaleplateView
                        android:id="@+id/sv_height_weight"
                        android:layout_width="@dimen/x267px"
                        android:layout_height="@dimen/x27px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/x187px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40px"
                    android:layout_marginTop="@dimen/y26px">

                    <TextView
                        style="@style/SecondBlack.Text26px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" />

                    <com.doumengmengandroidbady.view.ScaleplateView
                        android:id="@+id/sv_BMI"
                        android:layout_width="@dimen/x267px"
                        android:layout_height="@dimen/x27px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/x187px" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_develop_behavior"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/x20px"
                    android:layout_marginBottom="@dimen/y35px"/>

                <LinearLayout
                    android:id="@+id/ll_develop_behavior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:background="@color/linePink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px">
                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_result"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_result_weight"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y26px"/>
                <TextView
                    android:id="@+id/tv_result_height"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_result_height_weight"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_result_other"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px">
                <TextView
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_report_doctor_success"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_suggest"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y26px"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1px"
                android:layout_marginBottom="@dimen/y28px"
                android:layout_marginTop="@dimen/y28px"
                android:background="@color/linePink" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hospital_report_reference"
                android:gravity="center"
                style="@style/FirstGray.Text26px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26px"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginRight="@dimen/x20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_doctor_name"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_report_name"
                    style="@style/SecondBlack.Text26px"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_report_time"
                style="@style/SecondBlack.Text26px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20px"
                android:layout_marginLeft="@dimen/x20px"
                android:layout_marginTop="@dimen/y10px"
                android:layout_marginBottom="@dimen/y100px"
                android:gravity="right" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>