<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_white"
    >

    <include layout="@layout/include_title_back" />

    <ImageView
        android:layout_width="@dimen/x184px"
        android:layout_height="@dimen/y258px"
        android:scaleType="fitXY"
        android:src="@drawable/logo_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y207px"
        android:contentDescription="@string/contentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_company_name"
        android:textSize="@dimen/y34px"
        android:textColor="@color/second_black"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/y500px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y592px"
        android:layout_marginStart="@dimen/x102px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/y31px"
                android:layout_height="@dimen/y31px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_location"
                android:contentDescription="@string/contentDescription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstGray.Text28px"
                android:text="@string/about_company_location"
                android:layout_marginStart="@dimen/x15px"
                android:layout_alignTop="@+id/iv_location"
                android:includeFontPadding="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y40px">
            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="@dimen/y31px"
                android:layout_height="@dimen/y31px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_tel"
                android:contentDescription="@string/contentDescription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstGray.Text28px"
                android:text="@string/about_company_phone"
                android:layout_marginStart="@dimen/x15px"
                android:includeFontPadding="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y40px">
            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="@dimen/y31px"
                android:layout_height="@dimen/y31px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_mail"
                android:layout_marginTop="@dimen/y4px"
                android:contentDescription="@string/contentDescription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstGray.Text28px"
                android:text="@string/about_company_mail"
                android:layout_marginStart="@dimen/x15px"
                android:includeFontPadding="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y40px">
            <ImageView
                android:id="@+id/iv_website"
                android:layout_width="@dimen/y31px"
                android:layout_height="@dimen/y31px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_website"
                android:contentDescription="@string/contentDescription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstGray.Text28px"
                android:text="@string/about_company_website"
                android:layout_marginStart="@dimen/x15px"
                android:includeFontPadding="false"
                />
        </LinearLayout>

    </LinearLayout>

