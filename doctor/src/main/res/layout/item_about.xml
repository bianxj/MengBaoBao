<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x24px"
        android:paddingRight="@dimen/x24px"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y86px"
            android:paddingLeft="@dimen/x16px"
            >
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x50px"
                android:layout_height="@dimen/x50px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_about"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x87px"
                style="@style/FirstGray.Text28px"
                android:text="个人信息"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="@dimen/x21px"
                android:layout_height="@dimen/x33px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/right_allow"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/linePink"/>
    </LinearLayout>

</LinearLayout>